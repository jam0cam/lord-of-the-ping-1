<resources>

    <style name="SectionHeaderStyle" parent="android:Widget.Holo.Light.TextView">
        <item name="android:drawableBottom">@drawable/section_header</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="PullToRefreshStyle" parent="android:Widget">
        <item name="ptrHeaderBackground">@drawable/ab_solid_lotp</item>

        <!-- This is commented out as you should not set this unless you know what you're doing -->
        <!--<item name="ptrHeaderHeight"></item>-->

        <item name="ptrProgressBarColor">@color/green</item>
    </style>

    <style name="ActionBar.Solid.Lotp" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_lotp</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_lotp</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_lotp</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Lotp</item>
        <item name="android:logo">@drawable/ic_logo</item>
    </style>

    <style name="ActionBar.Transparent.Lotp" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_lotp</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Lotp</item>
    </style>

    <style name="PopupMenu.Lotp" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_lotp</item>
    </style>

    <style name="DropDownListView.Lotp" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_lotp</item>
    </style>

    <style name="ActionBarTabStyle.Lotp" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_lotp</item>
    </style>

    <style name="ActionBarTabTextStyle.Lotp" parent="@android:style/Widget.Holo.Light.ActionBar.TabText.Inverse">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="DropDownNav.Lotp" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_lotp</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_lotp</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_lotp</item>
    </style>

    <style name="ProgressBar.Lotp" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_lotp</item>
    </style>

    <style name="ActionButton.CloseMode.Lotp" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_lotp</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Lotp.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Lotp</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Lotp</item>
    </style>

    <style name="EditTextlotp" parent="android:Widget.EditText">
        <item name="android:background">@drawable/lotp_edit_text_holo_light</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ListViewlotp" parent="android:Widget.ListView">
        <item name="android:listSelector">@drawable/lotp_list_selector_holo_light</item>
        <item name="android:divider">@drawable/list_divider</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:drawSelectorOnTop">true</item>
    </style>

    <style name="ListViewlotp.White" parent="android:Widget.ListView.White">
        <item name="android:listSelector">@drawable/lotp_list_selector_holo_light</item>
        <item name="android:divider">@drawable/list_divider</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:drawSelectorOnTop">true</item>
    </style>

    <style name="SpinnerItemlotp" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Spinnerlotp" parent="android:Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/lotp_spinner_background_holo_light</item>
        <item name="android:dropDownSelector">@drawable/lotp_list_selector_holo_light</item>
    </style>

    <style name="AutocompleteTextViewlotp" parent="@android:Widget.Holo.Light.AutoCompleteTextView">
        <item name="android:dropDownSelector">@drawable/lotp_list_selector_holo_light</item>
    </style>

    <style name="PrimaryButtonStyle" parent="@android:Widget.Holo.Button">
        <item name="android:background">@drawable/primary_button</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SecondaryButtonStyle" parent="@android:Widget.Holo.Button">
        <item name="android:background">@drawable/secondary_button</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TableHeaderTextStyle" parent="@android:TextAppearance.Small">
        <item name="android:textStyle">bold</item>
    </style>

</resources>
